<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d2d40" >

    <ImageView
        android:id="@+id/portrait_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_icon" />

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portrait_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Alarm"
        android:textColor="@color/white"
        android:textSize="28dp" >
    </TextView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/logo_text"
        android:layout_marginTop="20dp"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:background="#fbfdff" >

            <ImageView
                android:id="@+id/iv_username"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/username_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/iv_username"
                android:alpha="0.3"
                android:background="@null"
                android:hint="警员编号"
                android:textColor="#323240"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:textColorHint="#323240"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/layout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#fbfdff" >

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:src="@drawable/possword" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dip"
                android:layout_toRightOf="@id/iv_password"
                android:alpha="0.3"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#323240"
                android:textColor="#323240"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_bt"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/login"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>